<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="ng.adashi.ui.verification.others.OthersVerificationViewModel" />
    </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?android:colorBackground"
            tools:context=".ui.verification.others.AgentOthersVerificationFragment">

            <TextView
                android:layout_marginTop="@dimen/margin_20_dp"
                android:text="OTHER INFORMATION"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                app:elevation="0dp"
                app:cardCornerRadius="6dp"
                android:layout_margin="@dimen/margin_20_dp"
                app:cardBackgroundColor="#FF8756"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/margin_20_dp"
                    android:text="@string/sorry"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_verification_step2"
                android:layout_height="wrap_content" />

            <ScrollView
                android:scrollbars="none"
                android:layout_marginTop="@dimen/margin_30_dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/Address_field"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                   android:layout_marginEnd="16dp"
                   android:fontFamily="@font/inter_regular"
                   android:hint="Address"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/login">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/Address"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:inputType="textPersonName"
                       android:fontFamily="@font/inter_regular"
                       android:padding="20dp"
                       android:singleLine="true" />

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/city_field"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginEnd="16dp"
                   android:fontFamily="@font/inter_regular"
                   android:hint="city"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/full_name_field">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/city"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:inputType="textPersonName"
                       android:fontFamily="@font/inter_regular"
                       android:padding="20dp"
                       android:singleLine="true" />

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/lga_field"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginEnd="16dp"
                   android:fontFamily="@font/inter_regular"
                   android:hint="Local Government Area"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/email_field">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/lga"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:inputType="textEmailAddress"
                       android:fontFamily="@font/inter_regular"
                       android:padding="20dp"
                       android:singleLine="true" />

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/state_field"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginEnd="16dp"
                   android:fontFamily="@font/inter_regular"
                   android:hint="State">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/state"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:inputType="text"
                       android:padding="20dp"
                       android:fontFamily="@font/inter_regular"
                       android:singleLine="true" />

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/OLga_field"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginEnd="16dp"
                   android:fontFamily="@font/inter_regular"
                   android:hint="Origin Local Government Area">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/OLga"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:inputType="text"
                       android:padding="20dp"
                       android:fontFamily="@font/inter_regular"
                       android:singleLine="true" />

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/OState_field"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginEnd="16dp"
                   android:fontFamily="@font/inter_regular"
                   android:hint="Origin State">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/OState"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:inputType="text"
                       android:padding="20dp"
                       android:fontFamily="@font/inter_regular"
                       android:singleLine="true" />

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/nextName_field"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginEnd="16dp"
                   android:fontFamily="@font/inter_regular"
                   android:hint="Next of Kin Name">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/nextName"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:inputType="text"
                       android:padding="20dp"
                       android:fontFamily="@font/inter_regular"
                       android:singleLine="true" />

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/nextPhone_field"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginEnd="16dp"
                   android:layout_marginBottom="@dimen/margin_20_dp"
                   android:fontFamily="@font/inter_regular"
                   android:hint="Next of Kin Phone Number">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/nextPhone"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:inputType="text"
                       android:padding="20dp"
                       android:fontFamily="@font/inter_regular"
                       android:singleLine="true" />

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.button.MaterialButton
                   android:id="@+id/next_button"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                   android:layout_marginTop="@dimen/margin_20_dp"
                   android:fontFamily="@font/inter_semibold"
                   android:layout_marginEnd="16dp"
                   android:layout_marginBottom="16dp"
                   android:padding="18dp"
                   android:text="Next"
                   android:textAllCaps="false" />
           </LinearLayout>

            </ScrollView>

        </LinearLayout>

</layout>